{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/opt/homebrew/opt/dotnet@8/bin/dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/DuctilatorTest/DuctilatorTest.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-windows",
            "command": "/opt/homebrew/opt/dotnet@8/bin/dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Ductilator.csproj",
                "-f",
                "net8.0-windows",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "/opt/homebrew/opt/dotnet@8/bin/dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
